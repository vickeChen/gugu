<!--pages/task/task.wxml-->
<view class='page'>
  <view class="title_img">
    <image src='https://o97mkvfjm.qnssl.com/logo.png' bindtap='' style='width:100px;height:100px'></image>
  </view>

  <view class='section'>
    <view class='input-area'>
      <input placeholder='任务名称' maxlength='30' placeholder-style='color: white;' auto-focus></input>
    </view>
  </view>
  <view class='section'>
    <view class='txt-area'>
      <textarea placeholder='详情描述(0-300)字' maxlength='300' placeholder-style='color: white;' show-confirm-bar></textarea>
    </view>
  </view>
  <view class='selectTime'>
 <!-- <view>{{year}}年{{month}}月{{day}}日</view>-->
 <view>
 <text style='color:white;' > 任务开始时间</text>
 </view>
  <picker-view indicator-style="height: 50px; text-align:center;" style="width: 100%; height: 50px;" value="{{value}}" bindchange="bindChange" mask-style='width:0px;' id='begin'>
    <picker-view-column>
      <view wx:for="{{years}}" style="line-height: 50px">{{item}}年</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{months}}" style="line-height: 50px">{{item}}月</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{days}}" style="line-height: 50px">{{item}}日</view>
    </picker-view-column>
  </picker-view>
<text style='color:white;' > 任务结束时间</text>
    <picker-view indicator-style="height: 50px; text-align:center;" style="width: 100%; height: 50px; margin-top:20px;" value="{{value}}" bindchange="bindChange" mask-style='width:0px;' id='end'>
    <picker-view-column>
      <view wx:for="{{years}}" style="line-height: 50px">{{item}}年</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{months}}" style="line-height: 50px">{{item}}月</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{days}}" style="line-height: 50px">{{item}}日</view>
    </picker-view-column>
  </picker-view>
  </view>



<view class='section'>
  <button bindtap='okTask'> ok </button>
</view>
</view>