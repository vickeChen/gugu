.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.taskbar {
  white-space: nowrap;
  padding-left: 2%;
  padding-right: 2%;
  margin-bottom: 30px;
  margin-top: 10px;
}

.taskblock {
  vertical-align: middle; /*垂直居中*/
  display: inline-block;
  width: 50%;
  height: 60px;
}

.task1 {
  /*垂直居中*/
  line-height: 60px;
  font-size: 20px;
  background-color: #fff;
  border-radius: 5px;
}

.task2 {
  line-height: 60px;
  text-align: center;
  background-color: #fff;
  border-radius: 5px;
}

.task3 {
